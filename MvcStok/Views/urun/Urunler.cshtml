@using MvcStok.Models.Entity;
@using PagedList;
@using PagedList.Mvc;
@model  PagedList.IPagedList<Tblurunler>
@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1 " class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün Id</th>
            <th>Ürün Adı</th>
            <th>Markası</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <td>@urun.UrunID</td>
                <td>@urun.UrunAdı</td>
                <td>@urun.Marka</td>
                <td>@urun.TblKategoriler.KatergoriAD</td>
                <td>@urun.Fiyat</td>
                <td>@urun.Stok</td>
                <td><a href="/urun/Sil/@urun.UrunID" class="btn btn-danger ">Sil</a></td>
                <td><a href="/urun/UrunGuncelle/@urun.UrunID" class="btn btn-info ">Güncelle</a></td>
            </tr>

        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Urunler", new { sayfa }))
<a href="/urun/Yeniurun" class="btn btn-primary">Yeni Ürün Ekle</a>






