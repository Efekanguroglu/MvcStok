@using MvcStok.Models.Entity;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<TblMusteriler>
@{
    ViewBag.Title = "Musteriler";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class=" table table-bordered">
    <tr>

        <th>Müsteri Id</th>
        <th>Müsteri Adı</th>
        <th>Müsteri Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>
       

    </tr>
    <tbody>
        @foreach (var musteris in Model)
        {
            <tr>
                <td>@musteris.MusteriID</td>
                <td>@musteris.MusteriAD</td>
                <td>@musteris.MusteriSoyad</td>               
                <td>@Html.ActionLink("Sil", "SIl", new { id = musteris.MusteriID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istediğinize Emin Misiniz')" })</td>
                <td><a href="/Musteri/MusteriGuncelle/@musteris.MusteriID" class="btn btn-info ">Güncelle</a></td>


            </tr>

        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Musteriler", new { sayfa }));
<a href="/Musteri/YeniMusteri" class="btn btn-primary">Yeni Müşteri Ekle</a>


