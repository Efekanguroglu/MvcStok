@using MvcStok.Models.Entity
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<TblKategoriler>
@{
    ViewBag.Title = "KategoriListesi";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th> Kategori Id</th>
        <th> Kategori Adı</th>
        <th> Sil </th>
        <th> Güncelle</th>

    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <td>@ktgr.KategoriID</td>
                <td>@ktgr.KatergoriAD</td>
                <td><a href="/Kategori/Sil/@ktgr.KategoriID" class="btn btn-danger ">Sil</a></td>
                <td><a href="/KATEGORI/KategoriGuncelle/@ktgr.KategoriID" class="btn btn-info ">Güncelle</a></td>
            </tr>

        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("KategoriListesi", new { sayfa }));
<a href="/Kategori/Yenikategori" class="btn btn-primary">Yeni Kategori Ekle</a>

